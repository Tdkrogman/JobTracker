@model JobTracker.ViewModels.JobEditViewModel
@{ 
    ViewBag.Title = Model.Action + " Job";
}
<div class="container">
    <form asp-action="Edit" method="post">
        <h1>@Model.Action Job</h1>
        <div class="form-group row">
            <label asp-for="Job.Name" class="col-2">Job Name</label>
            <input asp-for="Job.Name" type="text" class="form-control col-4" />
            <span asp-validation-for="Job.Name" class="text-danger col-6"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Job.Address" class="col-2">Address</label>
            <textarea asp-for="Job.Address" type="text" class="form-control col-4"></textarea>
            <span asp-validation-for="Job.Address" class="text-danger col-6"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Job.StartDate" class="col-2">Projected Start Date</label>
            <input asp-for="Job.StartDate" type="date" class="form-control col-4" />
            <span asp-validation-for="Job.StartDate" class="text-danger col-6"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Job.Status" class="col-2">Status</label>
            <select asp-for="Job.Status" class="form-control col-4">
                <option class="form-control col-4" value="Open">Open</option>
                <option class="form-control col-4" value="Waiting on Customer">Waiting on Customer</option>
                <option class="form-control col-4" value="In Progress">In Progress</option>
                <option class="form-control col-4" value="Closed">Closed</option>
            </select>
            <span asp-validation-for="Job.Status" class="text-danger col-6"></span>
        </div>
        <div class="form-group row">
            <label asp-for="Job.CustomerId" class="col-2">Customer</label>
            <select asp-for="Job.CustomerId" class="form-control col-4"
                    asp-items="@(new SelectList(Model.Customers, "CustomerId",
                                    "FullName", Model.Job.CustomerId))">
                <option value="">Select a Customer</option>
            </select>
            <span asp-validation-for="Job.CustomerId" class="text-danger col-6"></span>
        </div>

        <input type="hidden" asp-for="Job.JobId" />

        <input type="submit" value="Save" class="btn btn-primary">
        @if (Model.Action == "Edit")
        {
            <a asp-action="View" asp-route-id="@Model.Job.JobId" class="btn btn-primary">Cancel</a>
        }
        else
        {
            <a href="javascript:history.go(-1)" class="btn btn-primary">Cancel</a>
        }
    </form>
</div>