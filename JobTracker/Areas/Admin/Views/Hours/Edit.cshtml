@model WorkHour
@{
    ViewBag.Title = "Edit Hours";
}
<h1>@ViewBag.Action Work Hours</h1>
<form asp-action="Edit" method="post">
    <div class="form-group row">
        <label asp-for="Date" class="col-2">Date</label>
        <input asp-for="Date" class="form-control col-4" type="date" />
        <span asp-validation-for="Date" class="col-6 text-danger"></span>
    </div>
    <div class="form-group row">
        <label asp-for="Hours" class="col-2">Hours</label>
        <input asp-for="Hours" class="form-control col-4" type="text" />
        <span asp-validation-for="Hours" class="col-6 text-danger"></span>
    </div>
    <input type="hidden" asp-for="EmployeeId" value="@Model.EmployeeId" />
    <input type="hidden" asp-for="WorkHourId" value="@Model.WorkHourId" />
    <input type="submit" value="Save" class="btn btn-primary" />
    <a href="javascript:history.go(-1)" class="btn btn-primary">Back</a>
</form>
@if (ViewBag.Action == "Edit")
{
    <form asp-action="Delete" method="post" class="mt-2">
        <input type="hidden" asp-for="WorkHourId" value="@Model.WorkHourId" />
        <input type="hidden" asp-for="EmployeeId" value="@Model.EmployeeId" />
        <input type="hidden" asp-for="Date" value="@Model.Date" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
}